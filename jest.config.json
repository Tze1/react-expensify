{
  "setupFiles": [
    "raf/polyfill",
    "<rootDir>/src/tests/setupTests.js"
  ],
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "testPathIgnorePatterns": [
      "/node_modules/",
      ".e2e."
  ],
  "moduleNameMapper": {
    "\\.(css|less|sass|scss)$": "<rootDir>/src/tests/__mocks__/stylesheetMock.js"
  },
  "reporters": [
    "default",
    [
      "jest-junit", {
        "outputDirectory": "<rootDir>/tests_output/unit/"
      }
    ],
    [
      "jest-stare",
      {
        "resultDir": "tests_output/unit",
        "reportTitle": "Unit-Test Report - React-Expensify",
        "reportHeadline": "React-Expensify Unit-Test Results",
        "coverageLink": "coverage/lcov-report/index.html"
      }
    ]
  ],
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/public/",
    "/server/",
    "/src/tests/",
    "/tests_output/"
  ],
  "coverageDirectory": "<rootDir>/tests_output/unit/coverage/"
}