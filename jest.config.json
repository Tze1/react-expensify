{
  "setupFiles": [
    "raf/polyfill",
    "<rootDir>/src/tests/setupTests.js"
  ],
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "testPathIgnorePatterns": [
      "/node_modules/",
      ".e2e."
  ],
  "moduleNameMapper": {
    "\\.(css|less|sass|scss)$": "<rootDir>/src/tests/__mocks__/stylesheetMock.js"
  },
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/public/",
    "/server/",
    "/src/tests/",
    "/tests_output"
  ],
  "coverageDirectory": "<rootDir>/tests_output/unit/coverage/",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  }
}